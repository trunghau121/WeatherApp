<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_contai"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#1AFFFFFF"
    >

    <LinearLayout
        android:id="@+id/ln_sixteen"
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:weightSum="10"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtDayweek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thứ Hai"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorPrimarytext" />

            <TextView
                android:id="@+id/txtDateweek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:text="09-09-2015"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorPrimarytext" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivIconweek"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:src="@drawable/d10d" />

        <TextView
            android:id="@+id/txtTempweek"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:text="26°C"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FF5722"
            android:textStyle="bold" />

    </LinearLayout>
    <View
        android:id="@+id/vw_divider"
        android:layout_below="@+id/ln_sixteen"
        android:background="#73000000"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
</RelativeLayout>